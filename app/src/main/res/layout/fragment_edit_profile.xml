<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.staff.EditProfile"
    android:background="@drawable/bg_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="32sp"
        android:textAllCaps="true"
        android:id="@+id/registration"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <TableRow
            android:layout_marginBottom="15dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_weight="0"
                android:text="Name "
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="7dp"/>

            <EditText
                android:id="@+id/et_staff_name"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edittext_rounded1"
                android:textSize="15dp"
                android:textColor="#414141 "
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="15dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_weight="0"
                android:text="Phone "
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="7dp"/>

            <EditText
                android:id="@+id/et_staff_phone"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edittext_rounded1"
                android:textSize="15dp"
                android:textColor="#414141 "
                android:padding="8dp"
                android:inputType="number"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="15dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_weight="0"
                android:text="Email "
                android:drawableLeft="@drawable/ic_email_black"
                android:drawablePadding="7dp"/>

            <EditText
                android:id="@+id/et_staff_email"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:padding="8dp"
                android:background="@drawable/edittext_rounded1"
                android:textSize="15dp"
                android:textColor="#414141 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>
        <TableRow
            android:layout_marginBottom="15dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_weight="0"
                android:text="Change password "
                android:drawablePadding="7dp"/>

            <CheckBox
                android:id="@+id/chkbox_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:padding="8dp"
                android:text="Yes"
                android:checked="true"
                />

        </TableRow>

        <TableRow
            android:layout_marginBottom="15dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_weight="0"
                android:text="Password "
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="7dp"/>

            <EditText
                android:id="@+id/et_staff_password"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:padding="8dp"
                android:background="@drawable/edittext_rounded1"
                android:textSize="15dp"
                android:hint="Enter new password"
                android:textColor="#414141 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>


        <Button
            android:id="@+id/btn_submit"
            android:text="Submit"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="2dp"
            android:textColor="#FAF5F5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orangr_rounded" />
    </TableLayout>


</RelativeLayout>